[Unit]
Description=Home Services Hub Gateway
After=network.target

[Service]
Type=simple
User=hub
Group=hub
WorkingDirectory=/home/hub/hub
ExecStart=/home/hub/hub/hub-gateway
Restart=on-failure
RestartSec=5s

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/hub/hub

[Install]
WantedBy=multi-user.target
